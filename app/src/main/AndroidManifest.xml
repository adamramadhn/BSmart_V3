<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bpkp.bsmartapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TourismApp"
        android:usesCleartextTraffic="true">
        <activity android:name=".detail.DetailRKDActivity"></activity>
        <activity
            android:name=".login.LoginActivity"
            android:theme="@style/Theme.TourismApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".detail.DetailSuratTugasActivity"
            android:label="@string/title_activity_rkd"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.TourismApp.NoActionBar" />
        <activity
            android:name=".rkd.RKDActivity"
            android:label="@string/title_activity_detail_home"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.TourismApp.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:label="@string/login_b_smart"
            android:theme="@style/Theme.TourismApp.NoActionBar"></activity>
    </application>

</manifest>